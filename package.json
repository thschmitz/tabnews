{
   "name": "tabnews",
   "version": "1.0.0",
   "main": "index.js",
   "scripts": {
      "dev": "npm run services:up && npm run services:wait:database && npm run migration:up && next dev",
      "services:wait:database": "node infra/scripts/wait-for-postgres.js",
      "services:up": "docker compose -f infra/compose.yaml up -d",
      "services:down": "docker compose -f infra/compose.yaml down",
      "services:stop": "docker compose -f infra/compose.yaml stop",
      "lint:prettier:check": "prettier --check .",
      "lint:prettier:fix": "prettier --write .",
      "lint:eslint:check": "next lint --dir .",
      "concurrently": "concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"yarn run wait-for-server && jest --runInBand\"",
      "test": "yarn run services:up && yarn run concurrently",
      "test:watch": "jest --watchAll --runInBand",
      "localdb:connect": "psql --host=localhost --username=postgres --port=5432",
      "migration:create": "node-pg-migrate -m infra/migrations create",
      "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
      "wait-for-server": "node tests/wait-for-webserver.js",
      "prepare": "husky && husky install"
   },
   "author": "",
   "license": "MIT",
   "description": "",
   "dependencies": {
      "@secretlint/secretlint-rule-preset-recommend": "9.2.0",
      "async-retry": "1.3.3",
      "dotenv": "16.4.7",
      "dotenv-expand": "12.0.1",
      "eslint": "9.21.0",
      "eslint-config-next": "15.2.0",
      "next": "15.2.0",
      "node": "23.9.0",
      "node-pg-migrate": "7.9.1",
      "pg": "8.13.3",
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "secretlint": "9.2.0"
   },
   "devDependencies": {
      "@commitlint/cli": "19.7.1",
      "@commitlint/config-conventional": "19.7.1",
      "concurrently": "9.1.2",
      "eslint-config-prettier": "10.0.2",
      "eslint-plugin-jest": "28.11.0",
      "husky": "9.1.7",
      "jest": "29.7.0",
      "prettier": "3.5.3"
   }
}
